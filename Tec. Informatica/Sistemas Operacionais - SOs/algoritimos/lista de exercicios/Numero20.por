programa {

inteiro numero  

  funcao inicio() {

  //entrada
  escreva("Digite um número inteiro: ")
  leia(numero)
  //Digita um número inteiro

        // Processamento e saída
        se (numero % 2 == 0) {
            escreva("O número é PAR\n")
        }
        senao{
            escreva("O número é ÍMPAR\n")
        }
        //Informa se o número é impar ou par
  
  }
}
